@model List<Appointment>
@{
    var User = new string(ViewBag.LoggedInUserName);

}

<h2> Appointment List </h2>
<div class="row   mt-4 w-75">

    <div>
        <label class="form-control" > @ViewBag.LoggedInUserName!</label>
    </div>
    <form class="d-flex justify-content-center align-items-center" asp-action="Index">
        <input type="text" name="search" class="form-control  " placeholder="Enter Search Value" />
        <input type="submit" value="Search" class="btn btn-success " />
    </form>


</div>
<div>
    <a asp-action="Create" class="btn btn-dark"> Book Appoinyemnt</a>
</div>

@if (Model.Count() > 0)
{

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td> Appointment_Day </td>
                <td> Appointment_Time </td>
                <td> Appointment_Status </td>
                <td> Patient.FName </td>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td> @item.Appointment_Day </td>
                    <td> @item.Appointment_Time </td>
                    <td> @item.Appointment_Status </td>
                    <td> @item.AppointmentID</td>

                    


                  
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div class="card bg-dark text-light">
        <h2>  Appointment Available </h2>
    </div>
}



