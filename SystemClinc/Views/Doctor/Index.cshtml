
@model List<Appointment>


<h2> Appointment List </h2>
<div class="row   mt-4 w-75">


    <form class="d-flex justify-content-center align-items-center" asp-action="Index">
        <input type="text" name="search" class="form-control  " placeholder="Enter Search Value" />
        <input type="submit" value="Search" class="btn btn-success " />
    </form>


</div>


</div>

@if (Model.Count() > 0)
{

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td> Name </td>
                <td> Specialization </td>
                <td> Date </td>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td> @item.Appointment_Day </td>
                    <td> @item.Appointment_Time </td>
                    <td> @item.Appointment_Status </td>
                    <td> @item.Patient.FName</td>

                    <td>
                        <input type="submit" class="btn btn-primary" />
                        |
                        <a asp-action="Index" class="btn btn-dark"> Update</a>
                    </td>
                    <td>
                        <input type="submit" class="btn btn-primary" />
                        |
                        <a asp-action="Index" class="btn btn-dark"> Delete</a>
                    </td>


                    <partial name="ButtonPartial" model="@item.AppointmentID" />
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div class="card bg-dark text-light">
        <h2>  Appointment Available </h2>
    </div>
}



